{
  "compilerOptions": {
    "outDir": "./dist", 
    "target": "ES5",
    "module": "system",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true    
    }, 
    "filesGlob": [
        "app/**/*.ts",
        "typings/**/*.d.ts"
        ],
    "files": [
      "app/app.module.ts",
      "app/app.component.ts",
      "app/app.init.ts"      
    ],
    "outFile": "output.js",
  "exclude": [
    "node_modules"
  ]
  
}